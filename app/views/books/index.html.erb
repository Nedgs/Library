<!DOCTYPE html>
<html>
  <head>
    <title>Library</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-light">
    <div class="container mt-5">
      <h1 class="text-center text-success">Books ðŸ“”</h1>
      <div class="d-flex justify-content-between mb-3">
        <%= link_to 'Add new book', new_book_path, class: 'btn btn-success' %>
        <%= form_with(url: books_path, method: :get, local: true, class: "form-inline my-2 my-lg-0") do %>
          <%= text_field_tag :query, params[:query], class: "form-control mr-sm-2", placeholder: "Search books" %>
          <%= submit_tag "Search", class: "btn btn-outline-success my-2 my-sm-0" %>
        <% end %>
      </div>
      <ul class="list-group">
        <% @books.each do |book| %>
          <li class="list-group-item">
            <%= link_to book.title, book_path(book) %> by <%= book.author %>
          </li>
        <% end %>
      </ul>
    </div>
  </body>
</html>
